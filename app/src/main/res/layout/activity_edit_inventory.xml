<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".EditInventory">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="16dp">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/fragmentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Update Inventory"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentname"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="1sp"
            android:text="Item Name:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/inv_name_txtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentname"
            android:layout_toRightOf="@id/item_name"
            android:layout_weight="1"
            android:ems="5"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="1sp"
            android:text="Description:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/inv_desc_txtu"
            android:layout_width="220dp"
            android:layout_height="90dp"
            android:layout_below="@id/item_des"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inv_desc_txtu"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:text="Quantity:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/decrement"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/item_count"
            android:layout_marginStart="45dp"

            android:text="-"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/inv_qty_txtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/decrement"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/decrement"
            android:outlineSpotShadowColor="@color/black"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/increment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/item_count"
            android:layout_toRightOf="@id/inv_qty_txtu"
            android:text="+"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/increment"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Upupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/increment"
                android:layout_centerHorizontal="true"
                android:text="Update Item"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_Upback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/increment"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@id/btn_update"
                android:text="Go Back"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="205sp"
            android:layout_marginTop="50sp"
            android:layout_marginEnd="25sp"
            android:layout_marginBottom="1sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Photo of Item:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/inv_gas_picu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/insert_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert Image"
                android:textColor="@color/black" />
        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>