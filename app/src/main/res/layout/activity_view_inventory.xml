<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".ViewInventory">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout1"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        tools:context=".view"/>
    <ImageView
        android:id="@+id/view_inv_menu"
        android:clickable="true"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_margin="20dp"
        android:src="@drawable/menu"
        tools:ignore="MissingConstraints" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/view_inv_menu"
            android:hint="Sort by item id or name"
            android:id="@+id/sort_inv"
            android:textColor="@color/white"
            android:layout_margin="1sp"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/search_inv"
            android:clickable="true"
            android:layout_width="80dp"
            android:layout_height="45sp"
            android:layout_marginLeft="1sp"
            app:layout_constraintLeft_toRightOf="@id/sort_inv"
            android:src="@drawable/ic_search"
            android:text="Search"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/add_inv"
            android:clickable="true"
            app:tint="@color/white"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10sp"
            app:layout_constraintLeft_toRightOf="@id/search_inv"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/add_item"
            tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        android:orientation="vertical"
        tools:context=".view">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ListView
            android:id="@+id/lst1_inv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>