<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:id="@+id/inv_lists">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_inv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="12dp"
                    app:cardPreventCornerOverlap="true"
                    tools:layout_editor_absoluteX="10dp"
                    tools:ignore="MissingConstraints">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="12dp"
                            android:orientation="horizontal">
                                <!--
                                <ImageView
                                    android:id="@+id/inv_img"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="10dp"
                                    android:padding="1dp"
                                    android:src="@drawable/ic_default_img" /> -->


                                <TextView
                                    android:id="@+id/id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ID:"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:visibility="invisible"/>

                                <TextView
                                    android:id="@+id/inv_id_txtv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:layout_toRightOf="@id/id"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:visibility="invisible"/>

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignStart="@id/id"
                                    android:layout_below="@id/id"
                                    android:text="Item Name:"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/inv_name_txtv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10sp"
                                    android:layout_alignTop="@id/name"
                                    android:layout_toEndOf="@id/name"
                                    android:ems="9"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/name"
                                    android:layout_marginTop="5sp"
                                    android:layout_marginBottom="5sp"
                                    android:text="Description: "
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/inv_desc_txtv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@id/desc"
                                    android:layout_marginStart="10sp"
                                    android:layout_toEndOf="@id/desc"
                                    android:text=""
                                    android:ems="8"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/thres"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/name"
                                    android:layout_marginTop="5sp"
                                    android:layout_marginBottom="5sp"
                                    android:layout_toEndOf="@id/inv_desc_txtv"
                                    android:text="Threshold:"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/inv_thres_txtv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/qty"
                                    android:layout_marginStart="10sp"
                                    android:layout_marginTop="5sp"
                                    android:layout_toEndOf="@id/thres"
                                    android:text=""
                                    android:ems="4"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/qty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@id/inv_name_txtv"
                                    android:layout_toEndOf="@id/inv_name_txtv"
                                    android:text="Quantity: "
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/inv_qty_txtv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@id/qty"
                                    android:layout_toEndOf="@id/qty"
                                    android:ems="4"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="500sp"
            android:layout_marginTop="5sp"
            >

                <Button
                    android:id="@+id/update_item"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/edit" />

                        <Button
                            android:id="@+id/delete_item"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/delete" />
        </LinearLayout>
                        </RelativeLayout>
                </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
