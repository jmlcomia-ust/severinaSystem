<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp"
    tools:context=".update_items">

    <Button
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"

        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_menu" />

    <TextView
        android:id="@+id/update_items"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/menu"
        android:text="Update Items"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/settings"
        android:background="@drawable/profile"/>

    <Button
        android:id="@+id/settings"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/settings" />

    <Button
        android:id="@+id/search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/profile"
        android:layout_toRightOf="@id/search_info"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/search" />

    <EditText
        android:id="@+id/search_info"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/search"
        android:inputType="text"
        android:text="Search"
        android:textAlignment="center"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/edit_param"
        android:layout_width="15dp"
        android:layout_height="50dp"
        android:layout_below="@id/settings"
        android:layout_alignRight="@id/search"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/more" />

    <ImageView
        android:id="@+id/fence"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/search"
        android:background="#999999"/>

    <ListView
        android:id="@+id/updated_list"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@id/fence"
        android:layout_margin="20dp">
    </ListView>

        <Button
            android:id="@+id/more_item"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Add Other Item"
            android:layout_below="@id/updated_list"
            android:layout_marginLeft="50dp">
        </Button>
        <Button
            android:id="@+id/save_record"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:text="Save Record"
            android:layout_below="@id/updated_list"
            android:layout_marginRight="50dp">
        </Button>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/more_item"
        android:layout_margin="10dp">
    </fragment>


</RelativeLayout>