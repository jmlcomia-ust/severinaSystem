<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardOrders"
    android:background="@drawable/gradient_background">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".DashboardOrders">

        <Button
            android:id="@+id/dash_ord_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/menu"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@id/dash_ord_menu"
            android:gravity="center_vertical"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="40sp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/settings"
            android:layout_marginEnd="20sp"
            android:background="@drawable/profile" />

        <Button
            android:id="@+id/settings"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_setting" />

        <Button
            android:id="@+id/add_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/dash_ord_menu"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/add_item"
            android:backgroundTint="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="347dp"
            tools:layout_editor_absoluteY="59dp" />

        <Button
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/dash_ord_menu"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/add_item"
            android:background="@drawable/search"
            android:backgroundTint="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="292dp"
            tools:layout_editor_absoluteY="59dp" />

        <Spinner
            android:id="@+id/options"
            android:layout_width="240sp"
            android:layout_height="40sp"
            android:layout_below="@id/dash_ord_menu"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:background="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="59dp" />

        <TextView
            android:id="@+id/ongoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search"
            android:text="Ongoing Orders"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ScrollView
            android:id="@+id/scroll1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/ongoing"
            android:paddingTop="10dp"
            tools:ignore="MissingConstraints,NotSibling">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="?attr/actionBarSize"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </ScrollView>

        <TextView
            android:id="@+id/emptyRv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ongoing"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90sp"
            android:text="No Ongoing Orders"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scroll1"
            android:layout_marginTop="10sp"
            android:text="Recent Orders"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ScrollView
            android:id="@+id/scroll2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/recent"
            android:paddingTop="10dp"
            tools:ignore="MissingConstraints,NotSibling">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </ScrollView>

        <TextView
            android:id="@+id/emptyRv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60sp"
            android:text="No Recent Orders"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:visibility="visible" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>